import socket

def probar_conexion(host, puerto):
    try:
        my_socket = socket.create_connection((host, puerto), timeout=5)
        print(f" Conexi贸n exitosa a {host}:{puerto}")
        my_socket.close()
    except socket.error as e:
        print(f"Fall贸 la conexi贸n a {host}:{puerto} -> {e}")

# Prueba: conexi贸n al puerto 443 (HTTPS) de Google
probar_conexion("www.facebook.com", 443)
